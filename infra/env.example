# Configuración de AWS
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Configuración del proyecto
PROJECT_NAME=banca-internet
ENVIRONMENT=demo
DOMAIN_PREFIX=banca-internet-demo

# Configuración de Cognito
COGNITO_DOMAIN_PREFIX=banca-internet-demo
COGNITO_EMAIL_FROM=noreply@bancainternet.com

# Configuración de la API
API_STAGE=prod
API_DESCRIPTION=Banca por Internet API

# Configuración de DynamoDB
